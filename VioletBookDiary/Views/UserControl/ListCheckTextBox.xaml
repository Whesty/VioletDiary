<UserControl x:Class="VioletBookDiary.Views.UserControl.ListCheckTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VioletBookDiary.Views.UserControl"
             mc:Ignorable="d" Width="619" Height="425">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="378*"/>
        </Grid.RowDefinitions>
        
            <TextBox Text="{Binding NameItem}"></TextBox>
        <ListView Grid.Row="1" x:Name="userList">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <DockPanel>
                        <Image Height="148" Width="105" Source="{Binding Image}"></Image>
                        <StackPanel>
                            <TextBlock Text="{Binding Title}"></TextBlock>
                            <TextBlock Text="{Binding Authors}"></TextBlock>
                            <TextBlock Text="{Binding Discription}"></TextBlock>
                        </StackPanel>
                    </DockPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</UserControl>
