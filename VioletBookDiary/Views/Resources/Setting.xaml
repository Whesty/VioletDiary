<Window x:Class="VioletBookDiary.Views.Resources.Setting"
        WindowStartupLocation="CenterScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VioletBookDiary.Views.Resources"
        mc:Ignorable="d"
        Title="{DynamicResource Sitting}" Height="182" Width="257"   xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        >
    <Grid Style="{DynamicResource GridFull}">
        <StackPanel Margin="10,20,0,0">
            <TextBlock Text="{DynamicResource Langueage}"></TextBlock>
            <ComboBox x:Name="menuLanguage" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,10,0,0" >
            </ComboBox>
            <TextBlock Text="{DynamicResource Thems}"></TextBlock>
            <ComboBox x:Name="styleBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,10,0,0" />
        </StackPanel>
    </Grid>
</Window>
