<Window x:Class="VioletDiary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VioletDiary"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="53"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="274*"/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="MenuTools" Grid.Column="0" Grid.Row="1">
            <StackPanel>
                <Button Height="40">
                </Button>
                <Button Height="40">
                </Button>
            </StackPanel>

        </Grid>
        <Grid x:Name="GridSearch" Grid.Column="1">
            <TextBox x:Name="BoxSearch" Margin="30,10,30,0" BorderThickness="1,1,1,1" Height="30" VerticalAlignment="Top"></TextBox>
        </Grid>
        <Grid x:Name="GridPage" Grid.Column="1" Grid.Row="1">

        </Grid>
    </Grid>
</Window>
