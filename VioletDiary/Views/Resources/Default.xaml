<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="GridLeftBar" TargetType="Grid">
        <Setter Property="Background" Value="#9D35FF"/>
    </Style>
    <Style x:Key="GridLeftBarButton" TargetType="Button">
        <Setter Property="Background" Value="{x:Null}"/>
        <Setter Property="BorderBrush" Value="{x:Null}"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>
    <Style x:Key="GridFull" TargetType="Grid">
        <Setter Property="Background" Value="#FFF"/>
    </Style>
    <Style TargetType="Button">
        <Setter Property="Background" Value="#9D35FF"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="#9D35FF"/>
    </Style>
</ResourceDictionary>