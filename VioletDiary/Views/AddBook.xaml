<Window x:Class="VioletDiary.Views.AddBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VioletDiary.Views"
        mc:Ignorable="d"
        Title="AddBook" Height="489" Width="477"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid Style="{DynamicResource GridLeftBar}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="279*"/>
            <ColumnDefinition Width="521*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1">
            <TextBox Margin="40,20,40,0" Height="20" 
                     materialDesign:HintAssist.Hint="Введите название продукта"
                     HorizontalContentAlignment="Left" VerticalContentAlignment="Center">
            </TextBox>
            <TextBox Margin="40,20,40,0" Height="20" 
                     HorizontalContentAlignment="Left" VerticalContentAlignment="Center">
            </TextBox>
            <ListView Margin="40,20,40,0" Height="120" 
                     HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Background="{x:Null}" Foreground="White">
            </ListView>
        </StackPanel>
    </Grid>
</Window>
